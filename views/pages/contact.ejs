</head>

<body>
	<%- include ('../components/header'); -%>
		<div class="container">
			<div class="main flex">
                <div class="team-members">
                    <div class="grid-rows">
                        <% membersData.forEach(member => { %>
                            <div class="grid-col-3">
                                <%- include('../components/member_card', {
                                    name: member.name,
                                    avatar: member.avatar,
                                    facebook: member.facebook,
                                    twitter: member.twitter,
                                    linkedin: member.linkedin
                                }) -%>
                            </div>
                        <% }) %> 
                    </div>
                </div>
                <div class="form-info">
                    <h3>Thông tin liên hệ</h3>
                    <div class="flex">
                        <i class="fas fa-map-marker-alt"></i>
                        <p>BT3 A4, ngõ 214 Nguyễn Xiển, Thanh xuân, Hà Nội, Việt Nam</p>
                    </div>
                    <div class="flex">
                        <i class="fas fa-phone"></i>
                        <p>0123456789</p>
                    </div>
                    <div class="flex">
                        <i class="fas fa-id-card"></i>
                        <p>0123456789</p>
                    </div>
                    <div class="flex">
                        <i class="fas fa-envelope"></i>
                        <p>k14nodemy@gmail.com</p>
                    </div>
                    <div class="flex">
                        <i class="fas fa-globe"></i>
                        <a href="http://localhost:3000">http://localhost:3000</a>
                    </div>
                </div>
			</div>
		</div>

        <!-- MAP -->
        <div class="map">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3725.1533096594408!2d105.80185781476253!3d20.986490786021307!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3135acc026d557f9%3A0x6861dfd5c12f96cb!2zTmcuIDIxNCBOZ3V54buFbiBYaeG7g24sIEjDoCBO4buZaSwgVmnhu4d0IE5hbQ!5e0!3m2!1svi!2s!4v1635409379032!5m2!1svi!2s" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
        </div>
        
	<%- include ('../components/footer'); -%>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
		<script src="../../public/js/header.js"></script>
</body>

</html>